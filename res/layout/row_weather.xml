<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="?android:attr/listPreferredItemHeight"
	android:paddingTop="10dp" android:paddingBottom="10dp" android:gravity="center_vertical"
	android:background="@color/COLOR_FONT_DESC">
	<ImageView android:id="@+id/rowlistIconIView"
		android:layout_width="wrap_content" android:layout_height="fill_parent"
		android:layout_marginRight="5dp" android:src="@drawable/icon"
		android:layout_gravity="center_vertical" android:paddingLeft="@dimen/list_padding_left" />
	<LinearLayout android:orientation="vertical"
		android:layout_width="wrap_content" android:layout_height="fill_parent"
		android:gravity="center_vertical" android:paddingLeft="5dp">
		<TextView android:id="@+id/topTView" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="Top : "
			android:textColor="@color/WHITE" android:singleLine="true"
			android:textStyle="bold" android:textSize="18dp" />
		<TextView android:layout_width="wrap_content" android:text="Middle : "
			android:id="@+id/middleTView" android:singleLine="true"
			android:textColor="@color/COLOR_BG_BUTTON" android:ellipsize="marquee"
			android:gravity="top" android:layout_height="wrap_content" />
		<TextView android:layout_width="wrap_content" android:text="Bottom : "
			android:id="@+id/bottomTView" android:singleLine="true"
			android:textColor="@color/WHITE" android:ellipsize="marquee"
			android:gravity="top" android:layout_height="wrap_content" />
	</LinearLayout>
</LinearLayout>
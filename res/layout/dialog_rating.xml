<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:orientation="vertical" android:background="@color/COLOR_BG">
<!--	<ImageView android:id="@+id/selectRating"-->
<!--		android:layout_width="200px" android:layout_height="wrap_content"-->
<!--		android:background="@drawable/line_320_1_px" android:layout_gravity="center_horizontal"></ImageView>-->
	<RatingBar android:id="@+id/selectRating" android:paddingTop="5px"
		android:paddingBottom="5px" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_gravity="center_vertical|center_horizontal"
		android:numStars="5" android:rating="2.5">
	</RatingBar>
	<LinearLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_gravity="center_horizontal">
		<Button android:id="@+id/buttonOK" android:text="OK"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:width="100px" />
		<Button android:id="@+id/buttonCancel" android:text="Cancel"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:width="100px" />
	</LinearLayout>
</LinearLayout>

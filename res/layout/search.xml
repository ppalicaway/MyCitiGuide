<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/bg"
	android:padding="0px">
	
	<include 
		layout="@layout/template_top" 
		android:layout_alignParentTop="true"
		android:id="@+id/headerImageLayout"/> 
	
	<RelativeLayout 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:id="@+id/footerImageLayout"
		android:layout_alignParentBottom="true">
		
		<include layout="@layout/footer_template" />
	</RelativeLayout>
	
	<RelativeLayout 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:id="@+id/searchArea"
		android:layout_below="@id/headerImageLayout"
		android:layout_above="@id/footerImageLayout">
		
		<LinearLayout 
			android:id="@+id/widget32"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:background="@color/LIGHT_BLUE" 
			android:orientation="horizontal">			
			
			<TextView 
				android:id="@+id/descTitleTView"
				android:paddingLeft="5px" 
				android:layout_gravity="center_vertical"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:text="@string/searchTitle" 
				android:textStyle="bold"
				android:textColor="@color/WHITE" 
				android:background="@drawable/bluenav" 
				android:gravity="center_vertical|center_horizontal" />
		</LinearLayout>
		
		<LinearLayout 
			android:id="@+id/widget38"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:paddingTop="20px" 
			android:paddingBottom="10px"
			android:gravity="center_horizontal"
			android:layout_below="@id/widget32">
			
			<EditText 
				android:id="@+id/searchEText" 
				android:width="250px"
				android:singleLine="true" 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
		</LinearLayout>
		
		<LinearLayout 
			android:id="@+id/widget31"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:orientation="horizontal" 
			android:gravity="center_horizontal|center_vertical"
			android:paddingTop="10px" 
			android:paddingBottom="10px"
			android:layout_gravity="center_horizontal|center_vertical"
			android:layout_below="@id/widget38">
			
			<Button 
				android:id="@+id/buttonSearch" 
				android:text="Search"
				android:layout_height="wrap_content" 
				android:layout_width="wrap_content"
				android:width="100px" 
				android:textStyle="bold" 
				android:layout_marginRight="10px" 
				android:background="@drawable/button" 
				android:textColor="@color/WHITE"/>
			
			<Button 
				android:id="@+id/buttonCancel" 
				android:text="Cancel"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content" 
				android:width="100px"
				android:textStyle="bold" 
				android:layout_marginLeft="10px" 
				android:background="@drawable/button" 
				android:textColor="@color/WHITE"/>
		</LinearLayout>
	</RelativeLayout>
</RelativeLayout>
